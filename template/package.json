{
  "name": "{{name}}",
  "version": "0.0.0",
  "description": "{{description}}",
  {{#useGithub}}
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{githubProj}}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{{githubProj}}}/issues"
  },
  "homepage": "https://github.com/{{{githubProj}}}",
  {{/useGithub}}
  {{#lib}}
  "main": "./build/bundle.js",
  {{/lib}}
  "scripts": {
    {{#lib}}
    "prepublish": "gulp build",
    {{/lib}}
    {{#server}}
    "start": "forever ./src/server",
    "stop": "forever stop ./src/server",
    {{/server}}
    {{#clientOnly}}
    "start": "http-server -p 3000",
    "stop": "echo Nothing to stop",
    {{/clientOnly}}
    {{#clientOrServer}}
    "postinstall": "npm run build-prod",
    {{/clientOrServer}}
    "test": "mocha",
    "build": "gulp build",
    "build-prod": "gulp build-prod",
    "clean": "gulp clean",
    "watch": "gulp watch",
    "lint-js": "eslint ./src || echo JS linting failed with the above errors",
    {{#buildCss}}
    "lint-css": "stylelint src/**/*.css || echo CSS linting failed with the above errors",
    "lint": "npm run lint-js ; npm run lint-css"
    {{/buildCss}}
    {{#dontBuildCss}}
    "lint": "npm run lint-js"
    {{/dontBuildCss}}
  },
  "dependencies": {
    {{#react}}
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    {{/react}}
    {{#server}}
    "express": "^4.13.4",
    "serve-favicon": "^2.3.0",
    "ejs": "^2.4.2",
    "cookie-parser": "^1.4.3",
    "body-parser": "^1.15.1",
    "morgan": "^1.7.0",
    {{/server}}
    {{#clientOrServer}}
    "winston": "^2.3.1",
    {{/clientOrServer}}
    {{#client}}
    "fready": "^1.0.0",
    {{/client}}
    "nop": "1.0.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    {{#react}}
    "babel-preset-react": "^6.16.0",
    {{/react}}
    "babelify": "^7.3.0",
    {{#clientOrServer}}
    "normalize.css": "^5.0.0",
    {{/clientOrServer}}
    {{#clientOnly}}
    "http-server": "0.9.0",
    {{/clientOnly}}
    {{#buildCss}}
    "cssnano": "^3.10.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "postcss-url": "^5.1.2",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    {{/buildCss}}
    "browserify": "^13.0.1",
    "mocha": "^3.2.0",
    "chai": "^3.5.0",
    "del": "^2.2.1",
    "eslint": "^3.3.1",
    "forever": "^0.15.2",
    "glob": "^7.0.5",
    "gulp": "^3.9.1",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.7",
    "node-notifier": "^4.6.0",
    "nodemon": "^1.9.2",
    "run-sequence": "^1.2.2",
    "through": "^2.3.8",
    "vinyl-buffer": "^1.0.0",
    "vinyl-paths": "^2.1.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "engines": {
    "node": ">=6.3.0"
  }{{#clientAndServer}},
  "bundledDependencies": [
    "babel-polyfill",
    "fready",
    "winston",
    {{#react}}
    "react",
    "react-dom",
    {{/react}}
    "nop"
  ]
  {{/clientAndServer}}
}
