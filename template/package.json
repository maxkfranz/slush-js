{
  "name": "{{name}}",
  "version": "0.0.0",
  "description": "{{description}}",

  {{#useGithub}}
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{githubProj}}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{{githubProj}}}/issues"
  },
  "homepage": "https://github.com/{{{githubProj}}}",
  {{/useGithub}}

  "scripts": {
    {{#server}}
    "start": "forever -r dotenv/config -r esm ./src/server",
    "stop": "forever -r dotenv/config -r esm stop ./src/server",
    {{/server}}

    {{#clientOnly}}
    "start": "http-server -p 3000",
    "stop": "echo-cli Nothing to stop",
    {{/clientOnly}}

    {{#client}}
    "bundle-profile": "cross-env NODE_ENV=production PROFILE=true webpack --profile",
    {{/client}}

    "lint:js": "eslint ./src",

    {{#buildJs}}
    "bundle:js": "webpack",
    "watch:js": "webpack --watch",
    "watch:sync-bundle": "livereload \"build, src/views\"",
    {{/buildJs}}

    {{#server}}
    "watch:sync-server": "nodemon -r dotenv/config -r esm src/server/index.js",
    {{/server}}

    {{#buildCss}}
    "lint:css": "stylelint src/**/*.css",
    "bundle:css": "postcss src/styles/index.css -o build/main.css",
    "watch:css": "postcss --watch src/styles/index.css -o build/main.css",
    {{#client}}
    "bundle:css-deps": "postcss src/styles/deps.css -o build/deps.css",
    "watch:css-deps": "postcss --watch src/styles/deps.css -o build/deps.css",
    {{/client}}
    {{/buildCss}}

    {{#buildJs}}
    "bundle": "run-s bundle:*",
    "build": "run-p bundle",
    "build-prod": "cross-env NODE_ENV=production run-s build",
    "clean": "rimraf build/*",
    {{/buildJs}}

    "lint": "run-s lint:*",
    "watch": "run-p watch:*",
    "test": "mocha -r dotenv/config -r esm",
    "ci": "run-s lint test"
  },
  "dependencies": {
    "esm": "^3.2.14",

    {{#react}}
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-hyperscript": "^3.2.0",
    {{/react}}

    {{#server}}
    "express": "^4.16.4",
    "serve-favicon": "^2.5.0",
    "cookie-parser": "^1.4.4",
    "body-parser": "^1.18.3",
    "morgan": "^1.9.1",
    "winston": "^3.2.1",
    "lodash": "^4.17.11",
    "dotenv": "^6.2.0",
    {{/server}}

    {{#client}}
    "fready": "^1.0.0",
    {{/client}}

    "TO_DELETE": "0.0.0"
  },
  "devDependencies": {

    {{#react}}
    "@babel/preset-react": "^7.0.0",
    {{/react}}

    {{#buildCss}}
    "normalize.css": "^8.0.1",
    {{/buildCss}}

    {{#clientOnly}}
    "http-server": "0.11.1",
    {{/clientOnly}}

    {{#buildCss}}
    "cssnano": "^4.1.10",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-url": "^8.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    {{/buildCss}}

    {{#server}}
    "forever": "^0.15.3",
    "nodemon": "^1.18.10",
    {{/server}}

    {{#client}}
    "webpack-bundle-analyzer": "^3.1.0",
    "core-js": "^2.6.5",
    {{/client}}

    {{#buildJs}}
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/core": "^7.3.4",
    "babel-loader": "^8.0.5",
    "dotenv-webpack": "^1.7.0",
    {{/buildJs}}

    "cross-env": "^5.2.0",
    "livereload": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "echo-cli": "^1.0.8",
    "rimraf": "^2.6.3",
    "mocha": "^6.0.2",
    "chai": "^4.2.0",
    "eslint": "^5.15.1"
  },
  "engines": {
    "node": ">=8"
  },
  "browserslist": "last 3 versions, >1%"
}
