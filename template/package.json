{
  "name": "{{name}}",
  "version": "0.0.0",
  "description": "{{description}}",

  {{#useGithub}}
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{githubProj}}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{{githubProj}}}/issues"
  },
  "homepage": "https://github.com/{{{githubProj}}}",
  {{/useGithub}}

  {{#lib}}
  "main": "./build/bundle.js",
  {{/lib}}

  "scripts": {
    {{#lib}}
    "prepublish": "run-s build",
    {{/lib}}

    {{#buildJs}}
    "postinstall": "run-s build",
    {{/buildJs}}

    {{#server}}
    "start": "forever ./src/server",
    "stop": "forever stop ./src/server",
    {{/server}}

    {{#clientOnly}}
    "start": "http-server -p 3000",
    "stop": "echo-cli Nothing to stop",
    {{/clientOnly}}

    {{#client}}
    "bundle-profile": "cross-env NODE_ENV=production PROFILE=true webpack --profile",
    {{/client}}

    "lint:js": "eslint ./src",

    {{#buildJs}}
    "bundle:js": "webpack",
    "watch:js": "webpack --watch",
    "watch:sync-bundle": "livereload \"build, src/views\"",
    {{/buildJs}}

    {{#server}}
    "watch:sync-server": "nodemon src/server/index.js",
    {{/server}}

    {{#buildCss}}
    "lint:css": "stylelint src/**/*.css",
    "bundle:css": "postcss src/styles/index.css -o build/bundle.css",
    "watch:css": "postcss --watch src/styles/index.css -o build/bundle.css",
    {{#client}}
    "bundle:css-deps": "postcss src/styles/deps.css -o build/deps.css",
    "watch:css-deps": "postcss --watch src/styles/deps.css -o build/deps.css",
    {{/client}}
    {{/buildCss}}

    {{#buildJs}}
    "bundle": "run-s bundle:*",
    "build": "run-p bundle",
    "build-prod": "cross-env NODE_ENV=production run-s build",
    "clean": "rimraf build/*",
    {{/buildJs}}

    "lint": "run-s lint:*",
    "watch": "run-p watch:*",
    "test": "mocha"
  },
  "dependencies": {
    {{#react}}
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hyperscript": "^3.0.0",
    {{/react}}

    {{#server}}
    "express": "^4.13.4",
    "serve-favicon": "^2.3.0",
    "cookie-parser": "^1.4.3",
    "body-parser": "^1.15.1",
    "morgan": "^1.7.0",
    "winston": "^2.3.1",
    "lodash": "^4.17.4",
    {{/server}}

    {{#client}}
    "fready": "^1.0.0",
    {{/client}}

    "TO_DELETE": "0.0.0"
  },
  "devDependencies": {

    {{#react}}
    "babel-preset-react": "^6.16.0",
    {{/react}}


    {{#buildCss}}
    "normalize.css": "^5.0.0",
    {{/buildCss}}

    {{#clientOnly}}
    "http-server": "0.9.0",
    {{/clientOnly}}

    {{#buildCss}}
    "cssnano": "^3.10.0",
    "postcss": "^6.0.11",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-url": "^7.1.2",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    {{/buildCss}}

    {{#server}}
    "forever": "^0.15.2",
    "nodemon": "^1.12.1",
    {{/server}}

    {{#client}}
    "webpack-bundle-analyzer": "^2.9.0",
    {{/client}}

    "cross-env": "^5.0.0",
    "livereload": "^0.7.0",
    "npm-run-all": "^4.1.1",
    "echo-cli": "^1.0.8",
    "rimraf": "^2.6.2",
    "webpack": "^3.5.6",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.9.1",
    "babel-preset-env": "^1.6.0",
    "mocha": "^3.5.3",
    "chai": "^4.1.2",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  },
  "engines": {
    "node": ">=8"
  },
  "browserslist": "last 3 versions, >1%"
}
